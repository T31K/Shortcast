{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "build": {
    "beforeBuildCommand": "pnpm build",
    "beforeDevCommand": "pnpm dev",
    "devPath": "http://localhost:3000",
    "withGlobalTauri": true,
    "distDir": "../dist"
  },
  "package": {
    "productName": "harmonize",
    "version": "1.0.2"
  },
  "tauri": {
    "allowlist": {
      "globalShortcut": {
        "all": true
      },
      "process": {
        "relaunch": false
      },
      "window": {
        "hide": true,
        "show": true,
        "setFocus": true,
        "setAlwaysOnTop": true,
        "create": true
      },
      "shell": {
        "open": true,
        "execute": true,
        "scope": [{
          "name": "get-track",
          "cmd": "osascript",
          "args": ["-e", { "validator": "\\S+" }]
        },
        {
          "name": "play",
          "cmd": "osascript",
          "args": ["-e", { "validator": "\\S+" }]
        }
        ]
      },
      "fs": {
        "all": true,
        "scope": ["$APP/*"]
      }
    },
    "bundle": {
      "active": true,
      "category": "DeveloperTool",
      "copyright": "",
      "deb": {
        "depends": []
      },
      "externalBin": [],
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "com.harmonize",
      "longDescription": "",
      "macOS": {
        "entitlements": null,
        "exceptionDomain": "",
        "frameworks": [],
        "providerShortName": null,
        "signingIdentity": null
      },
      "resources": [],
      "shortDescription": "",
      "targets": "all",
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": ""
      }
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": true,
      "endpoints": [
          "https://api.docktopus.com/updates/{{target}}/{{current_version}}"
      ],
      "dialog": false,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDY3ODg1RUVGNjRFQkZGODUKUldTRi8rdGs3MTZJWjErbkl3TUwrQ0Q2aVYzK3E3VG1mbXNlZ29rMk8rUy9hQ1l2OUNqZEt3QzgK"
    },
    "macOSPrivateApi": true,
    "windows": [
      {
        "fullscreen": false,
        "width": 550,
        "height": 550,
        "focus": true,
        "transparent": true,
        "hiddenTitle": true,
        "decorations": false,
        "titleBarStyle": "Transparent",
        "resizable": false,
        "center": true
      }
    ]
  }
}
